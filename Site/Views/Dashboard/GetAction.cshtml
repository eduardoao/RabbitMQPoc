@model IEnumerable<Site.ViewModels.ReturnDashboardViewModel>

@{
    ViewBag.Title = "GetAction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Result Windows Services | RabbitMQ</h2>
<br />
@*<p>
    @Html.ActionLink("Create New", "Create")
